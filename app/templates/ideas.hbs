<<div class="row">

  <div class="col-md-4">
    <div class="list-group">
      {{#each model as |idea|}}
      {{#link-to 'ideas.idea' idea class="list-group-item"}}
        <h4 class="list-group-item-heading">{{idea.title}}</h4>
        <p class="list-group-item-text">{{idea.body}}</p>
      {{/link-to}}
      {{/each}}
    </div>
  </div>

  <div class="col-md-8">
    {{outlet}}
  </div>

</div>
